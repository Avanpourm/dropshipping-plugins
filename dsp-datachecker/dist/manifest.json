{
   "manifest_version":2,
   "version":"1.0",
   "name":"dropshipping 管理工具",
   "description":"",
   "icons": {
      "128": "/images/icon128.png",
      "16": "/images/icon16.png",
      "48": "/images/icon48.png"
   },
   "permissions":
  [
     "contextMenus", // 右键菜单
     "tabs", // 标签
     "notifications", // 通知
     "webRequest", // web请求
     "webRequestBlocking", // 阻塞式web请求
       "storage", // 插件本地存储
       "declarativeContent",
     "http://*/*", // 可以通过executeScript或者insertCSS访问的网站
     "https://*/*" // 可以通过executeScript或者insertCSS访问的网站
  ],
   "browser_action":{
      "default_icon": {
         "19": "/images/icon16.png",
          "38": "/images/icon48.png"
         },
      "default_title": "dropshipping 管理工具",
      "default_popup": "entry.html"
   },
   "content_scripts": [

   ]
}
